{
  "name": "site",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "npm run generate:schema-pages && astro build && npm run export:markdown && npm run generate:llms && npm run package:schemas",
    "build:only": "astro build",
    "export:markdown": "node scripts/export-markdown.js",
    "generate:llms": "node scripts/generate-llms-txt.js",
    "generate:schema-pages": "node scripts/generate-schema-pages.js",
    "package:schemas": "node scripts/package-schemas.js",
    "preview": "astro preview",
    "astro": "astro",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:manual": "playwright test tests/cookie-consent-manual.spec.ts --headed --workers=1",
    "test:integration": "playwright test tests/cookie-consent-integration.spec.ts",
    "perf:audit": "npm run build && npx serve dist -l 3000 & sleep 3 && npx lighthouse http://localhost:3000 --budget-path=performance-budget.json --view && pkill -f 'serve dist'",
    "perf:check": "npm run build && npx lighthouse http://localhost:3000 --budget-path=performance-budget.json --output=json --output-path=lighthouse-report.json"
  },
  "dependencies": {
    "@astrojs/react": "^4.4.0",
    "@astrojs/starlight": "^0.35.2",
    "@jop-software/astro-cookieconsent": "^3.0.1",
    "@playwright/test": "^1.55.0",
    "@primer/primitives": "^11.1.0",
    "@scalar/api-reference": "^1.35.0",
    "@stoplight/elements": "^9.0.6",
    "archiver": "^7.0.1",
    "astro": "^5.6.1",
    "dotenv": "^17.2.2",
    "glob": "^11.0.3",
    "playwright": "^1.55.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "rehype-mermaid": "^3.0.0",
    "sharp": "^0.34.2",
    "turndown": "^7.2.1",
    "turndown-plugin-gfm": "^1.0.2"
  }
}
