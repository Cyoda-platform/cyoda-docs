---
// API Reference page using Stoplight Elements (local npm package)
const title = 'API Reference';
const description = 'Interactive API documentation for the Cyoda platform';
---

<script>
    import '@stoplight/elements/web-components.min.js';
</script>

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title} | Cyoda Documentation</title>
    <link rel="icon" href="/favicon.svg" sizes="any" />
    <link rel="stylesheet" href="https://unpkg.com/@stoplight/elements/styles.min.css">
  </head>
  <body>
    <main class="main-content">
      <elements-api
              apiDescriptionUrl="/openapi/openapi.json"
              router="hash"
              layout="sidebar"
              hideInternal="true">
      </elements-api>
    </main>
  </body>
</html>
