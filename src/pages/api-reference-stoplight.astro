---
// API Reference page using Stoplight Elements
const title = 'API Reference';
const description = 'Interactive API documentation for the Cyoda platform';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title} | Cyoda Documentation</title>
    <link rel="icon" href="/favicon.svg" sizes="any" />
    <link rel="stylesheet" href="/src/styles/primer.css" />
    <link rel="stylesheet" href="https://unpkg.com/@stoplight/elements/styles.min.css">
    <style>
      body {
        margin: 0;
        font-family: system-ui, sans-serif;
        background: #0d1117;
        color: #f0f6fc;
      }
      .header {
        background: hsl(224, 19%, 97%);
        border-bottom: 1px solid var(--sl-color-hairline);
        padding: 1rem 2rem;
        display: flex;
        align-items: center;
        position: sticky;
        top: 0;
        z-index: 100;
      }
      .site-title {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        text-decoration: none;
        color: #4FB8B0;
        font-weight: 600;
        font-size: 1.25rem;
        transition: opacity 0.2s ease;
        margin: 0;
        font-family: system-ui, sans-serif;
      }

      .site-title:hover {
        opacity: 0.8;
      }

      .site-logo {
        flex-shrink: 0;
        border-radius: 4px;
        width: 32px;
        height: 32px;
      }

      .site-title-text {
        color: #4FB8B0;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }

      /* Responsive adjustments */
      @media (max-width: 50rem) {
        .site-title {
          font-size: 1.125rem;
          gap: 0.5rem;
        }

        .site-logo {
          width: 28px;
          height: 28px;
        }
      }

      .main-content {
        height: calc(100vh - 80px);
        width: 100%;
        overflow: auto;
      }

      /* Stoplight Elements specific styling */
      elements-api {
        height: 100%;
        width: 100%;
        display: block;
      }


    </style>
  </head>
  <body>
    <header class="header">
      <a href="/" class="site-title">
        <img
          src="/favicon.svg"
          alt="Cyoda Logo"
          class="site-logo"
        />
        <span class="site-title-text">Cyoda Documentation</span>
      </a>

    </header>
    <main class="main-content">
      <elements-api
        apiDescriptionUrl="/openapi/openapi.json"
        router="hash"
        layout="sidebar"
        hideInternal="true">
      </elements-api>
    </main>

    <script src="https://unpkg.com/@stoplight/elements/web-components.min.js" defer></script>
  </body>
</html>
