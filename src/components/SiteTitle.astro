---
import config from 'virtual:starlight/user-config';
import { Image } from 'astro:assets';
import cyodaIcon from '../assets/cyoda-icon.webp';
---

<a href="/" class="site-title">
  <Image
    src={cyodaIcon}
    alt="Cyoda Logo"
    width={32}
    height={32}
    class="site-logo"
  />
  <span class="site-title-text">Cyoda Documentation</span>
</a>

<style>
  .site-title {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
    color: var(--cyoda-aqua);
    font-weight: 600;
    font-size: 1.25rem;
    transition: opacity 0.2s ease;
  }

  .site-title:hover {
    opacity: 0.8;
  }

  .site-logo {
    flex-shrink: 0;
    border-radius: 4px;
  }

  .site-title-text {
    color: var(--cyoda-aqua);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  /* Ensure aqua color in both light and dark modes */
  :root[data-theme='dark'] .site-title-text,
  :root[data-theme='light'] .site-title-text {
    color: var(--cyoda-aqua);
  }

  /* Responsive adjustments */
  @media (max-width: 50rem) {
    .site-title {
      font-size: 1.125rem;
      gap: 0.5rem;
    }

    .site-logo {
      width: 28px;
      height: 28px;
    }
  }
</style>
